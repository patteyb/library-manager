doctype html
html
  include ./partials/_head

  body
    include ./partials/_filters-books
    include ./partials/_search-books
    include ./partials/_orderby-books
    table
      thead
        tr
          th Title
          th Author
          th Genre
          th Year Released
          th Return By
      tbody
      each book in books
        tr
          td
            a(href='/book?id=#{book.id}') #{book.title}
          td #{book.author}
          td #{book.genre}
          td #{book.first_published}
          td #{book.loans[0].return_by}