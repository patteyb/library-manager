doctype html
html
  include ./partials/_head.jade
  
  body
    h1 #{title}
    p
      a.button(href='/patrons/new') Create New Patron
    form(action='/patrons/all?offset=0&order=#{pagination.order}', method='get')
      p
        input#name(type='text' name='search' placeholder='Enter last name')
        input(type='submit', value='Search')
        a(href='/patrons/all?offset:0&order=name&search=%').back-link Back to full list
    include ./partials/_orderby-patron.jade
    table
      thead
        tr
          th Name 
          th Address
          th Email
          th Library ID
          th Zip
      tbody
      for patron in patrons
        tr
          td
            a(href='/patron?id=#{patron.id}') #{patron.first_name} #{patron.last_name}
          td #{patron.address}
          td #{patron.email}
          td #{patron.library_id}
          td #{patron.zip_code}
    p 
      .pages-container
        if pagination.numPages > 1
          strong Select a Page 
          - for (var x = 1; x <= pagination.numPages; x++) {
            - var offset = (x-1) * pagination.limit
            a.pages(class=x == pagination.offset/10 + 1  ? "selected-box" : "" href='/patrons/all?offset=#{offset}&order=#{pagination.order}') #{x}
          - }
       